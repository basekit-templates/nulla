<head>
	{% include "includes/head.twig" %}
	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }} {% block class %}{% endblock %}">
	<!-- Container -->
    <div class="container">

	    <!-- Page Content -->
	    <section class="template-content">
	       <!-- Header Include -->
	        {% include "includes/header.twig" %}

	        <!-- Main Widget Zone -->
	        {% block content %}
	        {% endblock %}

	        <!-- Footer Include -->
	        {% include "includes/footer.twig" %}
	    </section>
	    <!-- End Page Content -->

	</div>
	<!-- End Container -->

        {% include basekit.bodyScript %}

  	<!-- Nav Menu Script -->

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
       <script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')
    </script>

	<script>

    	// Toggles class open to display/hide the whole navigation
    	$( ".navigation-toggle" ).click(function() {
  			$( ".bk-extendednavigation" ).toggleClass( "open" );
		});

    	// Togglse class open to display/hide folders
		$( ".navigation-item.folder" ).each(function() {
			$( this ).click(function() {
	  			$( this ).toggleClass( "open" );
			});
		});

	</script>

	<!--Homepage arrow down -->
	<script>
			$(document).ready(function(){
			$('a[href^="#"]').on('click',function (e) {
			    e.preventDefault();

			    var target = this.hash;
			    var $target = $(target);

			    $('html, body').stop().animate({
				     'scrollTop': $target.offset().top
				}, 900, 'swing');

			});
		});
	</script>

</body>
</html>
